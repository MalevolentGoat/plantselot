{
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": ["plugin:@typescript-eslint/recommended", "plugin:react/recommended", "plugin:react-hooks/recommended", "plugin:prettier/recommended"],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": ["react", "react-hooks", "@typescript-eslint", "simple-import-sort", "unused-imports", "formatjs"],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "simple-import-sort/imports": "error",
      "react/display-name": "off",
      "react/prop-types": "off",
      "sort-imports": "off",
      "import/order": "off",
      "no-unused-vars": ["error", { "args": "none", "ignoreRestSiblings": true }],
      "prefer-template": "error",
      "unused-imports/no-unused-imports": "error",
      "formatjs/enforce-placeholders": "error",
      "formatjs/enforce-default-message": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-unused-vars": ["error", { "args": "none", "ignoreRestSiblings": true }]
    }
  }
  